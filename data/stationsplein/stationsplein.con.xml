<connections>
  <!-- Lane 0 is bike lane. Specify these connections explicitly to prevent the automatic connection 0 - 0 -->
  <connection from="StationswegEtoStationspleinSE" to="StationspleinSEtoSW" fromLane="0" toLane="0"/>
  <connection from="StationswegEtoStationspleinSE" to="StationspleinSEtoSW" fromLane="1" toLane="1"/>
  <connection from="StationswegEtoStationspleinSE" to="StationspleinSEtoSW" fromLane="2" toLane="2"/>

  <!-- middle lane of Stationsweg should connect to Stationsplein -->
  <connection from="StationswegEtoStationspleinSE" to="StationspleinSEtoNE" fromLane="1" toLane="0"/>

  <!-- Stationsplein should connect to middle lane of Stationsweg -->
  <connection from="StationspleinNWtoSW" to="StationspleinSWtoStationswegW" fromLane="0" toLane="1"/>
</connections>
